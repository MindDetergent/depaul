<%= form_tag search_facilities_path, :method => 'get' do %>

<p>
<%= label_tag :search_text %>
<%= text_field_tag :search_text %>
</p>
<p>
<%= submit_tag 'Search' %>
</p>
<% end %>
<% if @facilities %>

<table>
  <tr>
    <th>Facility</th>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
	<th>State</th>
    <th>Phone</th>
    <th>Enrolled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.facility_id %></td>
    <td><%= facility.name %></td>
    <td><%= facility.address %></td>
    <td><%= facility.city %></td>
	<td><%= facility.state %></td>
    <td><%= facility.phone %></td>
    <td><%= (facility.enrolled)?"yes":"no" %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<% end %>